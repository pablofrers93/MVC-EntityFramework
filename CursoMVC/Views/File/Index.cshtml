@model CursoMVC.Models.ViewModels.FileViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Message != null)
 {
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
 }

@using (Html.BeginForm("Save", "File", FormMethod.Post, new {enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group">
                @Html.LabelFor(d => d.File1)
                @Html.TextBoxFor(d => d.File1, new { @class = "form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(d => d.File1, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.File2)
                @Html.TextBoxFor(d => d.File2, new { @class="form-control", type = "file", accept = ".png" })
                @Html.ValidationMessageFor(d => d.File2, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Cadena)
                @Html.TextBoxFor(d => d.Cadena, new { @class="form-data" })
                @Html.ValidationMessageFor(d => d.Cadena, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Guardar">

            </div>
        </div>
    </div>

}
